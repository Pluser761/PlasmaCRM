{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@plasma-crm/tmp-lib1": ["libs/shared/tmp-lib1/src/index.ts"],
      "@plasma-crm/models": ["packages/shared/src/index.ts"],
      "@plasma-crm/index": [
        "apps/frontend/src/app/layouts/default/index/src/index.ts"
      ],
      "@plasma-crm/shared-types": ["libs/shared/types/src/index.ts"],
      "@plasma-crm/shared-types/auth": ["libs/shared/types/src/lib/auth.types.ts"],
      "@plasma-crm/shared-types/customer": ["libs/shared/types/src/lib/customer.types.ts"],
      "@plasma-crm/shared-types/order": ["libs/shared/types/src/lib/order.types.ts"],
      "@plasma-crm/shared-types/product": ["libs/shared/types/src/lib/product.types.ts"],
      "@plasma-crm/shared-types/api": ["libs/shared/types/src/lib/api.types.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
